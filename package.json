{
	"name": "vistart",
	"author": "Shiyun Lu <lushiyun@outlook.com>",
	"description": "Starter template for client-only React with Vite and TypeScript",
	"keywords": [
		"vite",
		"react",
		"boilerplate",
		"starter",
		"template"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/RicardoValdovinos/vite-react-boilerplate"
	},
	"license": "MIT",
	"version": "1.0.0",
	"scripts": {
		"setup": "git init && husky install && npx playwright install",
		"format": "prettier src/**/*.{ts,tsx} --write",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
		"dev": "vite",
		"storybook": "storybook dev -p 6006",
		"storybook:setup": "node node_modules/@storybook/addon-styling/bin/postinstall.js",
		"storybook:build": "storybook build",
		"test": "vitest run src/ && playwright test",
		"test:unit": "vitest src/",
		"test:unit:coverage": "vitest --coverage src/",
		"test:e2e": "playwright test",
		"test:e2e:report": "playwright show-report",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"commitlint": "commitlint --edit",
		"commitizen": "exec < /dev/tty && git cz --hook || true"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.3.2",
		"@radix-ui/react-slot": "^1.0.2",
		"@tanstack/react-query": "^4.36.1",
		"@tanstack/router": "0.0.1-beta.119",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"lucide-react": "^0.292.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.48.2",
		"tailwind-merge": "^2.0.0",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.22.4",
		"zustand": "^4.4.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.8.1",
		"@commitlint/config-conventional": "^17.8.1",
		"@faker-js/faker": "^8.2.0",
		"@hookform/devtools": "^4.3.1",
		"@playwright/test": "^1.39.0",
		"@storybook/addon-essentials": "^7.5.2",
		"@storybook/addon-interactions": "^7.5.2",
		"@storybook/addon-links": "^7.5.2",
		"@storybook/addon-styling": "^1.3.7",
		"@storybook/blocks": "^7.5.2",
		"@storybook/react": "^7.5.2",
		"@storybook/react-vite": "^7.5.2",
		"@storybook/testing-library": "0.0.14-next.2",
		"@tanstack/react-query-devtools": "^4.36.1",
		"@tanstack/router-devtools": "0.0.1-beta.119",
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.5.1",
		"@total-typescript/ts-reset": "^0.4.2",
		"@types/node": "^20.8.10",
		"@types/react": "^18.2.35",
		"@types/react-dom": "^18.2.14",
		"@types/testing-library__jest-dom": "^5.14.9",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"@vitejs/plugin-react-swc": "^3.4.1",
		"@vitest/coverage-v8": "^0.33.0",
		"autoprefixer": "^10.4.16",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.4",
		"eslint-plugin-storybook": "^0.6.15",
		"eslint-plugin-unicorn": "^49.0.0",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.6",
		"prop-types": "^15.8.1",
		"storybook": "^7.5.2",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.33.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
